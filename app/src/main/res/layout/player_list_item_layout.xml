<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />


    <TextView
        android:id="@+id/activity_show_rank_place"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:text="Place"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_show_rank_nick"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="20dp"
        android:text="nick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_show_rank_place"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/activity_show_rank_rankValue"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:text="rank"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/activity_show_rank_nick"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>